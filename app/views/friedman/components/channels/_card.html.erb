<div class="row row-cols-4 g-3 gy-4">
  <% headquarters.each do |headquarter| %>
    <div class="col">
      <div class="card text-dark bg-light p-0 shadow-sm">
        <div class="card-header">
          "<%= headquarter.brand %>" channels
        </div>
        <ul class="list-group list-group-flush">
          <% if headquarter.channels.count > 0 %>
            <% headquarter.channels.each do |channel| %>
              <li class="list-group-item"><%= channel.name %></li>
            <% end %>
          <% else %>
            <li class="list-group-item">Empty</li>
          <% end %>
        </ul>
      </div>
    </div>
  <% end %>
</div>