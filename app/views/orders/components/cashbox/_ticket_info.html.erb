<div class="p-2 d-flex justify-content-between align-items-center">
  <div class="ms-2 d-flex flex-column">
    <div>
      <span class="badge rounded-pill bg-secondary shadow-sm"><%= order.total_products %></span> 
      <small>products</small>
    </div>
    <div>
      <span class="badge rounded-pill bg-secondary shadow-sm mt-2"><%= order.total_units %></span> 
      <small>total units</small>
    </div>
  </div>
  <div class="text-end">
    <h3 class="m-0">$<%= number_with_precision(order.total_order, precision: 0, delimiter: '.', separator: ',') %></h3>
    IVA <span>$<%= number_with_precision(order.total_order / 1.19, precision: 2, delimiter: '.', separator: ',') %></span>
  </div>
</div>