<div id=<%= dom_id(space) %> class="bg-light border border-1 rounded-3 d-flex justify-content-between align-items-center mt-1">
  <ul class="list-group list-group-horizontal">
    <li class="list-group-item bg-light border-0 border-end"><span class="badge bg-success border text-light fs-6 me-2">$<%= space.price %></span></li>
    <li class="list-group-item bg-light border-0 border-end"><span class="badge rounded-pill border bg-white text-dark"><%= space.stock %></span> stock</li>
    <li class="list-group-item bg-light border-0 border-end"><span class="badge rounded-pill border bg-white text-dark"><%= space.warehouse.name %></span></li>
    <li class="list-group-item bg-light border-0"><span class="me-1"><%= space.product.name %></span></li>
  </ul>
  
  <button class="me-2 px-4 btn btn-secondary btn-sm">add</button>
</div>