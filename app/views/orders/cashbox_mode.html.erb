<div class="vh-100 d-flex">
  <div id="ticket-main-window" class="col-8 h-100 overflow-auto">
    <%= render 'orders/components/cashbox/sections/search' %>
  </div>
  <div class="col-4 d-flex flex-column border shadow-sm">
    <div class="bg-light p-2 sticky-top border-bottom d-flex justify-content-between align-items-center">
      <h3 id="right-section-title" class="m-0">Ticket</h3>
      <%= render 'orders/components/cashbox/ticket_navigation_buttons' %>
    </div>

    <div id="ticket-items" class="p-2 h-100 overflow-auto">
      <%= render 'orders/components/cashbox/items_list' %>
    </div>

    <div class="bg-light mt-auto border-top">
      <div id="ticket-info">
        <%= render 'orders/components/cashbox/ticket_info', order: @order %>
      </div>

      <div class="border-top border-dark p-2 d-flex justify-content-between">
        <%= link_to "Discard", end_transaction_path(@channel, transaction_flag: 'discard'), method: :update, class: "btn btn-outline-danger" %>
        <%= link_to "Complete transaction", end_transaction_path(@channel, transaction_flag: 'save'), method: :update, class: "btn btn-success active" %>
      </div>
    </div>
  </div>
