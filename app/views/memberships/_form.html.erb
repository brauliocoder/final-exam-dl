<%= form_with(model: [@headquarter, membership]) do |form| %>
  <% if membership.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(membership.errors.count, "error") %> prohibited this membership from being saved:</h2>

      <ul>
        <% membership.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :expiration %>
    <%= form.datetime_select :expiration %>
  </div>

  <div class="field">
    <%= form.label :autorenewal %>
    <%= form.check_box :autorenewal %>
  </div>

  <div class="field">
    <%= form.label :is_active %>
    <%= form.check_box :is_active %>
  </div>

  <div class="field">
    <%= form.label :role_id %>
    <%= form.collection_select :role_id, Role.all, :id, :title %>
  </div>

  <div class="field">
    <%= form.label :user_id %>
    <%= form.text_field :user_id %>
  </div>

  <div class="field">
    <%= form.label :headquarter_id %>
    <%= form.text_field :headquarter_id %>
  </div>

  <div class="field">
    <%= form.label :channel_id %>
    <%= form.collection_check_boxes :channel_id, @headquarter.channels, :id, :name do |c| %>
      <%= c.label(:"data-value" => c.value) { c.check_box + c.text } %>
    <% end %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
