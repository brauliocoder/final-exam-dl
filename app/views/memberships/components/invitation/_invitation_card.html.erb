<div class="col">
  <div class="card shadow-sm border border-dark">
    <div class="card-body">
      <h5 class="card-title fs-3">"<%= membership.headquarter.brand %>" membership for</h5>
      <h6 class="card-subtitle mb-2 text-muted"><%= membership.invitation_email %></h6>

      <% if membership.channels.count > 0 %>
        <ul class="list-group">
          <li class="list-group-item list-group-item-secondary py-0">On following channels</li>
          <% membership.channels.each do |channel| %>
            <li class="list-group-item py-0"><small><%= channel.name %></small></li>
          <% end %>
        </ul>
      <% else %>
        <div class="alert alert-info m-1 py-1" role="alert">
          you don't participate on any channel for this headquarter yet
        </div>
      <% end %>
    </div>
  </div>
</div>