<div class="col">
  <div class="card shadow-sm border border-dark">
    <div class="card-body">
      <h5 class="card-title fs-3"><%= member.headquarter.brand %> membership for</h5>
      <h6 class="card-subtitle mb-2 text-muted"><%= member.invitation_email %></h6>

      <% if member.channels.count > 0 %>
        <ul class="list-group">
          <li class="list-group-item list-group-item-secondary py-0">Partitipating on this channels</li>
          <% member.channels.each do |channel| %>
            <li class="list-group-item py-0"><small><%= channel.name %></small></li>
          <% end %>
        </ul>
      <% else %>
        <div class="alert alert-info m-1 py-1" role="alert">
          you don't participate on any channel for this headquarter yet
        </div>
      <% end %>
    </div>
    <div class="card-footer bg-dark d-flex justify-content-end">
      <%= render 'memberships/components/dropdown' %>
    </div>
  </div>
</div>