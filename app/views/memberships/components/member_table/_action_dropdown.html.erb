<div class="dropdown">
  <a class="btn btn-secondary btn-sm py-0 dropdown-toggle" href="#" role="button" id="dropdownMenuLink" data-bs-toggle="dropdown" aria-expanded="false">
    actions
  </a>

  <ul class="dropdown-menu" aria-labelledby="dropdownMenuLink">
    <li>
      <span data-bs-toggle='modal' data-bs-target='#staticBackdrop'>
        <%= link_to "Channels access", headquarter_connect_channels_path(member.headquarter, member), class: "dropdown-item", class: "dropdown-item py-1", data: { 'turbo_frame': 'remote_modal'} %>
      </span>
    </li>

    <li>
      <span data-bs-toggle='modal' data-bs-target='#staticBackdrop'>
        <%= link_to "Edit member", edit_headquarter_membership_path(@headquarter, member), class: "dropdown-item", class: "dropdown-item py-1", data: { 'turbo_frame': 'remote_modal'} %>
      </span>
    </li>

    <li><hr class="dropdown-divider"></li>
    <li>
      <%= link_to "Cancel this membership", [@headquarter, member], method: :delete, class: "dropdown-item py-1", data: { confirm: 'Are you sure?' }  %>
